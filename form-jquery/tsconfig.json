{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "dom"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleDetection": "force",
    "allowJs": true,

    "noEmit": true,
    "esModuleInterop": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  }
}
